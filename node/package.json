{
  "name": "openadr-3-client",
  "version": "1.0.0",
  "description": "OpenADR 3 client library for Node.js",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "engines": {
    "node": ">=24.0.0"
  },
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "dev": "tsc --watch",
    "test": "npm run build && node --test dist/test/*.js",
    "lint": "echo 'No linter configured yet'",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {},
  "devDependencies": {
    "typescript": "^5.6.0",
    "@types/node": "^24.0.0"
  },
  "files": [
    "dist/**/*"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "keywords": [
    "openadr",
    "openadr3",
    "demand-response",
    "energy",
    "rest-api",
    "oauth2"
